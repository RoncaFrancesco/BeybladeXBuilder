<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="512" height="512">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#8B5CF6;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="0" dy="4" stdDeviation="8" flood-opacity="0.3"/>
    </filter>
  </defs>

  <!-- Background -->
  <rect width="512" height="512" rx="128" fill="url(#bg)" />

  <!-- Beyblade symbol centered -->
  <g transform="translate(256, 256)" filter="url(#shadow)">
    <!-- Outer ring -->
    <circle cx="0" cy="0" r="180" fill="none" stroke="white" stroke-width="20" />

    <!-- Middle ring -->
    <circle cx="0" cy="0" r="140" fill="none" stroke="white" stroke-width="8" opacity="0.6" />

    <!-- Inner circle -->
    <circle cx="0" cy="0" r="60" fill="white" />

    <!-- Cross pattern -->
    <path d="M -30,-120 L 30,-120 L 30,-30 L 120,-30 L 120,30 L 30,30 L 30,120 L -30,120 L -30,30 L -120,30 L -120,-30 L -30,-30 Z"
          fill="white" />

    <!-- Center dot -->
    <circle cx="0" cy="0" r="25" fill="#3B82F6" />

    <!-- Inner detail -->
    <circle cx="0" cy="0" r="15" fill="#1E3A8A" />

    <!-- Decorative elements -->
    <circle cx="-130" cy="-130" r="20" fill="white" opacity="0.8" />
    <circle cx="130" cy="-130" r="20" fill="white" opacity="0.8" />
    <circle cx="-130" cy="130" r="20" fill="white" opacity="0.8" />
    <circle cx="130" cy="130" r="20" fill="white" opacity="0.8" />
  </g>

  <!-- Text at bottom -->
  <text x="256" y="440" font-family="Arial, sans-serif" font-size="36" font-weight="bold" text-anchor="middle" fill="white">
    BEYBLADE X
  </text>
  <text x="256" y="475" font-family="Arial, sans-serif" font-size="24" text-anchor="middle" fill="white" opacity="0.9">
    Team Builder
  </text>
</svg>